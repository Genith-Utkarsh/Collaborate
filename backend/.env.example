# Environment variables for Render deployment
# Add these to your Render dashboard under Environment Variables

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/collaborate

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=10000

# Frontend URL (your Vercel deployment URL)
FRONTEND_URL=https://your-frontend-app.vercel.app

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_TOKEN=your-github-personal-access-token

# Session Secret
SESSION_SECRET=collaborate-session-secret-change-in-production

# Backend URL (will be provided by Render)
BACKEND_URL=https://your-backend-app.onrender.com
